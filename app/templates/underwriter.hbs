    <div class="container">
        <div class="row">
            <div class="span8">
                <form action="billing" method="post" class="form-horizontal" id="billingform" accept-charset="utf-8">
                    <label for="email" class="control-label">
                        Insurer ID
                    </label>
                    <div class="controls">
                        {{input type="text" valueBinding="insuredId"}}
                    </div>
                    <br>
                    <div class="control-group">
                        <label for="address" class="control-label">
                           Applied Claim Amount
                        </label>
                        <div class="controls">
                            {{input type="text" valueBinding="claimAmount"}}
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="zip" class="control-label">
                            Approved Claim Amount
                        </label>
                        <div class="controls">
                            {{input type="text" valueBinding="Amounttopay"}}
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="city" class="control-label">
                            Reason
                        </label>
                        <div class="controls">
                            {{input type="text" valueBinding="Reason"}}
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="country" class="control-label">
                            Status
                        </label>
                        <div class="controls">
                             <select class="form-control" onchange={{action "updateValue" value="target.value"}} style="width:206px"id="country">
                                <option>Select</option>
                                <option value="Approved">Approved</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-large btn-primary" {{action "tpa"}}>Submit Details</button>
                    </div>
                </form>
            </div> <!-- .span8 -->
